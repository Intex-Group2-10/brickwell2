@{
    ViewData["Title"] = "Home Page";
}

@model List<brickwell2.Models.Product>

<h2>Customers</h2>

<table border="1">
    <thead>
        <tr>
            <th>Product</th>
            <th>Price</th>
            <th>Number of Parts</th>
            <!-- Add other customer properties as needed -->
        </tr>
    </thead>
    <tbody>
        @foreach (var Product in Model)
        {
            <tr>
                <td>@Product.Name</td>
                <td>@Product.Price</td>
                <td>@Product.NumParts</td>
                <!-- Add other customer properties as needed -->
            </tr>
        }
    </tbody>
</table>
